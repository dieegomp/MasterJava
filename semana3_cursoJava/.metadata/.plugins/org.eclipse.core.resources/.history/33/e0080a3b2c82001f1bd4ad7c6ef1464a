<body>
    <script>
        sumatorio(prompt("Dime un numero: "));
        
        function sumatorio(n1){
            let resultado = 1;
            if (n1 > 1 ){
                for(i= 1;i <= n1;i++){
                    resultado += i
                }
            }
            document.write(resultado)
        }

    </script>
</body>

    <script>
        let resultado;
        let base = prompt("dime una base para elevarla: ");
        let exponente = prompt("dime un exponente para la base: ");
        for(i= 0 ; i == exponente; i++){
            resultado += base * base
        }
        document.write("El resultado es :"+resultado);
</script>
